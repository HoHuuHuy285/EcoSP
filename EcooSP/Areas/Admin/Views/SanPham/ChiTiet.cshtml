@model IEnumerable<EcooSP.Models.spDanhSachSanPham_Result>

@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
    int i = 0;
}
<style>
    #namanyay-search-box {
        background: #eee;
        padding: 10px;
        border-radius: 5px 0 0 5px;
        -moz-border-radius: 5px 0 0 5px;
        -webkit-border-radius: 5px 0 0 5px;
        -o-border-radius: 5px 0 0 5px;
        border: 0 none;
    }

    #namanyay-search-btn {
        background: #0099ff;
        color: white;
        font: 'trebuchet ms', trebuchet;
        padding: 10px 20px;
        border-radius: 0 5px 5px 0;
        -moz-border-radius: 0 5px 5px 0;
        -webkit-border-radius: 0 5px 5px 0;
        -o-border-radius: 0 5px 5px 0;
        border: 0 none;
        font-weight: bold;
    }
</style>


<div class="row">
    <div class="col-md-12">
        <h2>Thông Tin Sách </h2>
    </div>
    <div class="col-md-12">

        <form id="searchthis" style="display:inline;" method="get">
            <select name="idloai" id="namanyay-search-box">
                <option> Tất cả loại </option>
                @foreach (var item in new EcooSP.Models.mapLoaiSanPham().DanhSach())
                {
                    <option value="@item.ID_TheLoai" @Html.Raw(item.ID_TheLoai == (int?)ViewBag.idLoai?"selected":"")>@item.TheLoai1</option>
                }

            </select>
            <input id="namanyay-search-box" name="tensach" value="@ViewBag.tensach" type="text" placeholder="Search" />
            <button id="namanyay-search-btn" type="submit">Go</button>
        </form>
        <br />
        <a href="~/Admin/SanPham/ThemMoi">Thêm Mới</a>
    </div>
</div>
<div class="col-md-12 table-bordered">


    <table class="table">
        <tr>
            <th style="width:50px">STT</th>
            <th>
                Tên Sách
            </th>
            <th>
                Giá Bán
            </th>
            <th>
                Ngày Nhập
            </th>
            <th>
                Tình Trạng
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>
                    <a href="~/Admin/SanPham/Detail?id=@item.ID">@item.TenSach</a>  
                </td> 
                <td>
                    @item.GiaBan
                </td>
                <td>
                    @item.NgayNhap
                </td>
                <td>
                    @item.ConHang
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>
                    <a href="/Admin/SanPham/CapNhat?id=@item.ID">Sửa</a>|
                    <a onclick="if (confirm('Bạn có chắc chắn muốn xoá không ?') == true) {location.href='/Admin/SanPham/Xoa?id=@item.ID'} "   href="#" style="color:red">Xoá</a>
                </td>
            </tr>
        }

    </table>
    </div>