            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="aa-product-area">
                            <div class="aa-product-inner">
                                <!-- start prduct navigation -->
                                <ul class="nav nav-tabs aa-products-tab">
                                    @{ 
                                        string active = "active"; 
                                    }
                                    @foreach (var item in loaiSanPhams)
                                    {
                                        <li class="@active"><a href="#type_@item.ID_TheLoai" data-toggle="tab">@item.TheLoai1</a></li>
                                        active = "";
                                    } 
                                </ul>
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    @{
                                        active = "active";
                                    }
                                    @foreach (var item in loaiSanPhams)
                                    {

                                        var sanPhamTheoLoais = new EcooSP.Models.mapSach().spTimKiem("", item.ID_TheLoai);


                                        <div class="tab-pane fade in @active" id="type_@item.ID_TheLoai">
