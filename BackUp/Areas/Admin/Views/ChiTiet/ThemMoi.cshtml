@model EcooSP.Models.NHAXUATBAN

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}
<div class="col-md-12">
<h2>Thêm Nhà Xuất Bản</h2>
    <hr />
    <form method="post">

    </form>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2"> ID Nhà Xuất Bản</label>
            <div class="col-md-10">
                <input name="NXB_ID" class = "form-control" value="@Model.NXB_ID"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Tên Nhà Xuất Bản</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NXB_Ten, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô Tả</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NXB_MoTa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a href="/Admin/ChiTiet/NhaXuatBan" class="btn btn-default">Huỷ</a>
            </div>
        </div>
    </div>
}


    </div> 
